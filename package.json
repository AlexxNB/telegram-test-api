{
  "name": "telegram-test-api",
  "version": "1.0.7",
  "description": "Emulating telegram API",
  "keywords": [
    "telegram",
    "bot",
    "test"
  ],
  "main": "index.js",
  "scripts": {
    "start": "node --use_strict ./bin/start",
    "test": "DEBUG=TelegramServer:* ./node_modules/mocha/bin/mocha --use_strict --exit",
    "lint": "./node_modules/eslint/bin/eslint.js src test bin",
    "check_coverage": "nyc check-coverage --lines 80 --functions 80 --branches 80",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jehy/telegram-test-api"
  },
  "author": "Jehy",
  "engines": {
    "node": ">=6.0"
  },
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.2",
    "body-parser": "~1.18.3",
    "debug": "^4.0.1",
    "express": "^4.16.3",
    "http-shutdown": "^1.2.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "istanbul": "~0.4.5",
    "mocha": "^5.2.0",
    "node-telegram-bot-api": "~0.30.0",
    "nyc": "^13.0.1"
  }
}
